<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Tourism Trips Booking</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Tourism_Trips_Booking.styles.css" asp-append-version="true" />

    <style>
        /* Custom style for the "My Dashboard" link in a blue box */
        .dashboard-link {
            color: white; /* White text color */
            background-color: #007bff; /* Blue background */
            padding: 10px 20px; /* Padding around the link */
            border-radius: 5px; /* Rounded corners */
            text-decoration: none; /* Remove underline */
            font-weight: bold; /* Make text bold */
        }

            /* Hover effect for the "My Dashboard" link */
            .dashboard-link:hover {
                background-color: #0056b3; /* Darker blue on hover */
            }

        /* Optional: Add some spacing between the link and other items */
        .navbar-nav .nav-item {
            margin-right: 10px;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <!-- Application Name (link to home page) -->
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">ElOmda Makadi House</a>

                <!-- Navigation links for logged-in users-->
                <ul class="navbar-nav ml-auto">
                    @if (User.Identity.IsAuthenticated)
                    {

                        <li class="nav-item d-flex align-items-center me-3">
                            @{
                                var role = Context.Session.GetString("UserRole");
                                var dashboardAction = role == "Admin" ? "AdminDashboard" : "UserDashboard";
                            }
                            <a class="btn btn-primary" asp-controller="Account" asp-action="@dashboardAction">My Dashboard</a>
                        </li>

                        <li class="nav-item d-flex align-items-center me-2">
                            <span class="navbar-text text-dark me-2">
                                Hello, @User.FindFirst("Name")?.Value
                            </span>
                        </li>
                        <li class="nav-item">
                            <form method="post" asp-controller="Account" asp-action="LogOut">
                                <button type="submit" class="btn btn-danger">Logout</button>
                            </form>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="/Account/Login">Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Account/Register">Register</a>
                        </li>
                    }
                </ul>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()  <!-- This is where the page content will be displayed -->
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
