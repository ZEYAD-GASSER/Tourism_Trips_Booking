@model List<Tourism_Trips_Booking.Models.Trips>
@{
    ViewData["Title"] = "Admin Dashboard";
    var role = Context.Session.GetString("UserRole");
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

@if (role == "Admin")
{
    <div class="container mt-4">
        <h2 class="mb-4">Admin Dashboard</h2>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">
                @TempData["SuccessMessage"]
            </div>
        }

        <div class="d-flex justify-content-between align-items-center mb-4">
            <h3>Trip Management</h3>
            <a asp-controller="Trip" asp-action="Create" class="btn btn-primary">Add New Trip</a>
        </div>

        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Destination</th>
                    <th>Hotel</th>
                    <th>Transport</th>
                    <th>Start Date</th>
                    <th>End Date</th>
                    <th>Price</th>
                    <th>Image</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var trip in Model)
                {
                    <tr>
                        <td>@trip.Title</td>
                        <td>@trip.Description</td>
                        <td>@trip.Destination</td>
                        <td>@trip.HotelName</td>
                        <td>@trip.TransportType</td>
                        <td>@trip.StartDate.ToShortDateString()</td>
                        <td>@trip.EndDate.ToShortDateString()</td>
                        <td>@trip.price</td>
                        <td>
                            @if (!string.IsNullOrEmpty(trip.ImagePath))
                            {
                                <img src="@Url.Content(trip.ImagePath)" alt="Trip Image" style="width:100px;height:auto;" />
                            }
                            else
                            {
                                <img src="@Url.Content("~/images/default.jpg")" alt="Default Image" style="width:100px;height:auto;" />
                            }
                        </td>
                        <td>
                            <div class="btn-group" role="group">
                                <a href="@Url.Action("Edit", "Trip", new { id = trip.Id })" class="btn btn-warning btn-sm">Edit</a>
                                <form asp-controller="Trip" asp-action="Delete" method="post" style="display: inline;">
                                    <input type="hidden" name="id" value="@trip.Id" />
                                    <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this trip?');">Delete</button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="container mt-4">
        <div class="alert alert-danger">
            <h4>Access Denied</h4>
            <p>You do not have permission to access the admin dashboard.</p>
        </div>
    </div>
}

